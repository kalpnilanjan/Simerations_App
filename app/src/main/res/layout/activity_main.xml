<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="com.kalpnil.ksinfotech.tsec.tsec.MainActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar">
        </include>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="1500dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/coverpic"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:text="Todays ever changing world requires one to think quickly and systematically. A lot of importance is given to innovative ideas and out of the box thinking.Just when you start thinking that you have reached the top, there is someone who has already planned to surpass you. We as future managers should take upon us to Create new avenues through obscure paths, Compete with the best people around and Conquer the target. With this year's theme, we bring to you events that will incite your ambitious spirits as future executives! It's all happening here, at Simerations 2015!!" />
    </LinearLayout>
    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.kalpnil.ksinfotech.tsec.tsec.NavigationDrawerFragment"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
